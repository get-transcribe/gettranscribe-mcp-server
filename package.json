{
  "name": "gettranscribe-mcp",
  "version": "1.2.0",
  "description": "MCP server for GetTranscribe supporting both stdio and Streamable HTTP transports",
  "type": "module",
  "main": "mcp-server.js",
  "bin": {
    "gettranscribe-mcp": "./mcp-server.js"
  },
  "scripts": {
    "start": "node mcp-server.js",
    "start:stdio": "MCP_TRANSPORT=stdio node mcp-server.js",
    "start:http": "MCP_TRANSPORT=http PORT=8080 node mcp-server.js",
    "test": "echo 'No tests yet' && exit 0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "transcription",
    "gettranscribe",
    "stdio",
    "http",
    "sse"
  ]
}
