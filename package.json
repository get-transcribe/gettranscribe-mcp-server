{
  "name": "gettranscribe-mcp",
  "version": "1.3.0",
  "description": "MCP server for GetTranscribe - AI-powered video transcription service. Supports stdio and Streamable HTTP transports with custom UI components for ChatGPT.",
  "type": "module",
  "main": "mcp-server.js",
  "bin": {
    "gettranscribe-mcp": "./mcp-server.js"
  },
  "files": [
    "mcp-server.js",
    "component-helper.js",
    "src/**/*",
    "web/dist/**/*",
    "web/template.html",
    "README.md",
    "README-CHATGPT.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/get-transcribe/gettranscribe-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/get-transcribe/gettranscribe-mcp-server/issues"
  },
  "homepage": "https://gettranscribe.ai",
  "author": {
    "name": "GetTranscribe",
    "email": "support@gettranscribe.ai",
    "url": "https://gettranscribe.ai"
  },
  "license": "MIT",
  "scripts": {
    "start": "node mcp-server.js",
    "start:stdio": "MCP_TRANSPORT=stdio node mcp-server.js",
    "start:http": "MCP_TRANSPORT=http PORT=8080 node mcp-server.js",
    "start:chatgpt": "MCP_TRANSPORT=http PORT=8080 node mcp-server.js",
    "dev": "MCP_TRANSPORT=http PORT=8080 node mcp-server.js",
    "test": "node examples/test-both-transports.js",
    "test:stdio": "MCP_TRANSPORT=stdio node mcp-server.js",
    "test:http": "MCP_TRANSPORT=http PORT=8080 node mcp-server.js",
    "prepublishOnly": "cd web && npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.7",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "transcription",
    "video-transcription",
    "gettranscribe",
    "ai",
    "claude",
    "chatgpt",
    "openai",
    "stdio",
    "http",
    "sse",
    "instagram",
    "tiktok",
    "youtube",
    "social-media"
  ]
}
